<!DOCTYPE html>
<html lang="en">
  {{> header isDetail=true}}

    <h1>{{Name}}</h1>
    <p>{{#each Tags}}
      {{#isEqual . 'aws-pds'}}{{else}}<span class="label label-info{{#isEqual . 'sustainability'}}-sustainability{{else}}{{/isEqual}} tag link-tag">{{.}}</span>{{/isEqual}}
  {{/each}}
    </p>
    <div class="row">
      <div class="col-md-6">
      <h3>Description</h3>
      <p>{{{md Description}}}</p>

      {{#if Documentation}}
      <h4>Documentation</h4>
      <p>{{{md Documentation}}}</p>
      {{/if}}

      {{#if AdditionalInfo}}
      <h4>Additional info</h4>
      <p>{{{md AdditionalInfo}}}</p>
      {{/if}}    
      
      {{#if AdditionalInfoExternal}}
      <h4>Additional info</h4>
      <p>{{{mdExternal AdditionalInfoExternal}}}</p>
      {{/if}}    
 
      {{#if EOBrowser}}
      <h4>Explore</h4>
      <p><a href="{{EOBrowser}}"><button class="label label-info" > Open in EO Browser </button></a> </p>
      {{/if}}  
      {{#if TutorialNotebook}}
      <h4>Explore</h4>
      <p><a href="{{TutorialNotebook}}"><button class="label label-info" > Open Notebook </button></a> </p>
      {{/if}} 
      {{#if Flickr}}
      <h4>Explore</h4>
      <p><a href="{{Flickr}}"><button class="label label-info" > Open in Flickr </button></a> </p>
      {{/if}} 

      {{#if Explore}}
      <h4>Explore</h4>
      <p><button>{{{md Explore}}}</button></p>
      {{/if}}

      {{#if Resolution}}
      <h4>Resolution</h4>
      <p>{{{md Resolution}}}
      {{/if}}

      {{#if GeographicalCoverage}}
      <h4>Geographical coverage</h4>
      <p>{{{md GeographicalCoverage}}}</p>
      {{/if}}

      {{#if TemporalAvailability}}
      <h4>Temporal availability</h4>
      <p>{{{md TemporalAvailability}}}</p>
      {{/if}}

      {{#if TemporalResolution}}
      <h4>Temporal Resolution</h4>
      <p>{{{md TemporalResolution}}}</p>
      {{/if}}

      {{#if UpdateFrequency}}
      <h4>Update Frequency</h4>
      <p>{{md UpdateFrequency}}</p>
      {{/if}}

      {{#if BandInformation}}
      <h4>Band Information</h4>
      {{{tabelaricRenderer BandInformation}}}
      {{/if}}

      {{#if evalscriptUrl}}
      <h4>evalscripturl</h4>
      <p>{{{md evalscriptUrl}}}</p>
      {{/if}}

      {{#if configuration}}
      <h4>configuration</h4>
      <p>{{{md configuration}}}</p>
      {{/if}}

      {{#if Variables}}
      <h4>Variables Information</h4>
      {{{tabelaricRenderer Variables}}}
      {{/if}}

      {{#if Attributes}}
      <h4>Attributes Information</h4>
      <p>{{{tabelaricRenderer Attributes}}}</p>
      {{/if}}  

      {{#if CustomScripts}}
      <h4>Custom scripts</h4>
      {{{urlListRenderer CustomScripts}}}
      {{/if}}

      {{#if License}}
      <h4>License</h4>
      <p>{{{md License}}}</p>
      {{/if}}

      {{#if Provider}}
      <h4>Provider</h4>
      <p>{{{managedByRenderer Provider}}}</p>
      {{/if}}

      {{#if ManagedBy}}
      <h4>Managed By</h4>
      <p>{{{managedByRenderer ManagedBy}}}</p>
      <p>See all datasets managed by <a href="{{managedByLink}}">{{managedByName}}</a>.</p>
      {{/if}}

      <h4>Contact</h4>
      <p>{{{md Contact}}}</p>

      {{#if DataAtWork}}
      <h4 name="usageexamples">Usage Examples</h4>
        {{#if DataAtWork.Tutorials}}
        <h5 class="dataatwork-category">Tutorials</h5>
        <ul class="dataatwork-list">
        {{#each DataAtWork.Tutorials}}
          {{> detailList URL=URL Title=Title AuthorURL=AuthorURL AuthorName=AuthorName Services=Services}}
        {{/each}}
        </ul>
        {{/if}}
        {{#if DataAtWork.Tools}}
        <h5 class="dataatwork-category">Tools & Applications</h5>
        <ul class="dataatwork-list">
        {{#each DataAtWork.Tools}}
          {{> detailList URL=URL Title=Title AuthorURL=AuthorURL AuthorName=AuthorName}}
        {{/each}}
        </ul>
        {{/if}}
        {{#if DataAtWork.Publications}}
        <h5 class="dataatwork-category">Publications</h5>
        <ul class="dataatwork-list">
        {{#each DataAtWork.Publications}}
          {{> detailList URL=URL Title=Title AuthorURL=AuthorURL AuthorName=AuthorName}}
        {{/each}}
        </ul>
        {{/if}}
      {{/if}}

      {{#if Metadata}}
      <h4>More Information</h4>
      <table class="table table-condensed table-bordered table-hover">
        {{#each Metadata as |value key|}}
        <tr>
          <th>{{key}}</th>
          <td>{{value}}</td>
        </tr>
        {{/each}}
      </table>
      {{/if}}
    </div>
    <div class="col-md-5 col-md-offset-1">
      <ul class="resource-list">
        {{#each Resources}}
        <h3>{{Group}}</h3>
        <li>
          <dl class="resource-list">
            {{#if EndPoint}}
            <dt class="resource-arn">End point</dt>
            <dd><code>{{EndPoint}}</code></dd>
            {{/if}}
            {{#if Type}}
            <dt class="resource-host">Type</dt>
            <dd><code>{{Type}}</code></dd>
            {{#isEqual Type 'DEM'}}
            <dt class="resource-host">demInstance</dt>
            <dd><code>{{demInstance}}</code></dd>
             {{/isEqual}}
            {{/if}}
            {{#if DatasetName}}
            <dt class="resource-host">dataset_name</dt>
            <dd><code>{{DatasetName}}</code></dd>
            {{/if}}
            {{#if CollectionId}}
            <dt class="resource-host">collectionId</dt>
            <dd><code>{{CollectionId}}</code></dd>
            {{/if}}
            {{#if Database}}
            <dt class="resource-host">database</dt>
            <dd><code>{{Database}}</code></dd>
            {{/if}}
            {{#if Collection}}
            <dt class="resource-host">collection</dt>
            <dd><code>{{Collection}}</code></dd>
            {{/if}}
            {{#if StoreInstanceID}}
            <dt class="resource-host">store_id</dt>
            <dd><code>{{StoreInstanceID}}</code></dd>
            {{/if}}
            {{#if StoreTitle}}
            <dt class="resource-host">store_title</dt>
            <dd><code>{{StoreTitle}}</code></dd>
            {{/if}}
            {{#if DataID}}
            <dt class="resource-host">data_id</dt>
            <dd><code>{{DataID}}</code></dd>
            {{/if}}
            {{#if Notes}}
            <dt class="resource-description">Notes</dt>
            <dd class="resource-description">{{{md Notes}}}</dd>
            {{/if}} 
            {{#isEqual Type 'S3 Bucket'}}
            {{#unless ControlledAccess}}
            <dt class="resource-region"><a href="https://aws.amazon.com/cli/">AWS CLI</a> Access{{#unless RequesterPays}} (No AWS account required){{/unless}}</dt>
            <dd><code>aws s3 ls s3://{{{arnToBucket ARN}}} {{#if RequesterPays}}--request-payer requester{{else}}--no-sign-request{{/if}}</code></dd>
            {{/unless}}
            {{/isEqual}}
            {{#if Explore}}
            <dt class="resource-explore">Explore</dt>
            {{#each Explore}}
            <dd>{{{md .}}}</dd>
            {{/each}}
            {{/if}}
          </dl>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  {{> footer isDetail=true}}

  <script src="{{rootUrl}}js/tags.js"></script>
